<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">
             <persistence-unit name="titi" transaction-type="RESOURCE_LOCAL">
               
      <class>modele.Utilisateur</class>   
      <class>modele.Role_Utilisateur</class>    
      <class>modele.Role</class>
      <class>modele.Role_Action</class>
      <class>modele.Action</class>
      
      <properties>
         <property name="javax.persistence.jdbc.driver" value="org.apache.derby.jdbc.ClientDriver"/>
         <property name="javax.persistence.jdbc.user" value="derby"/>
         <property name="javax.persistence.jdbc.password" value="derby"/>
         <property name="javax.persistence.jdbc.url" value="jdbc:derby://172.17.0.2:1530/PPEDB;"/>
         <property name="hibernate.dialect" value="org.hibernate.dialect.DerbyDialect"/>
         <property name="hibernate.max_fetch_depth" value="3"/>     
         <property name="hibernate.hbm2ddl.auto" value="create"/>
      </properties>
   </persistence-unit>
</persistence>